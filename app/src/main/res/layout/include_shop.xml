<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorImage1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Shopping Essentials" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorImage1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgg"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/handwash"
                            />
                        <LinearLayout
                            android:background="@drawable/bgg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dettol Handwash"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                android:textColor="@android:color/holo_blue_bright"
                                />
                            <TextView
                                android:gravity="end"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="BUY NOW"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgg"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="fitCenter"
                            android:src="@drawable/sanitizer"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bgg"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hand Sanitizer"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                />
                            <TextView
                                android:gravity="end"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="BUY NOW"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgg"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/mask"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bgg"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Surgical Mask"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                />
                            <TextView
                                android:gravity="end"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="BUY NOW"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgg"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/protectionkit"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bgg"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/holo_blue_bright"
                                android:text="Protection Kit"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                />
                            <TextView
                                android:gravity="end"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="BUY NOW"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgg"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/protectiongloves"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bgg"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Protection Gloves"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                />
                            <TextView
                                android:gravity="end"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="BUY NOW"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgg"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/surfacedisinfectant"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bgg"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Surface Disinfectent"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                />
                            <TextView
                                android:gravity="end"
                                android:layout_marginTop="8dp"
                                android:textColor="@android:color/holo_blue_bright"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="BUY NOW"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</LinearLayout>