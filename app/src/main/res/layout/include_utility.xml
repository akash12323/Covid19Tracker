<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorImage1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Utilities" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorImage1"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:background="@drawable/bgg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Donate To PM Relief Fund"
                            android:textColor="@android:color/holo_blue_bright"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="35dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/paytm"
                                    android:scaleType="fitCenter"
                                    android:layout_width="70dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/paytm"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PayTm"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@android:color/holo_blue_bright"
                                    android:textSize="20sp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:scaleType="centerCrop"
                                    android:id="@+id/gpay"
                                    android:layout_width="70dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/gpay"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Google Pay"
                                    android:minLines="2"
                                    android:gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@android:color/holo_blue_bright"
                                    android:textSize="18sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:id="@+id/axis"
                                    android:layout_width="70dp"
                                    android:scaleType="centerCrop"
                                    android:layout_height="80dp"
                                    android:src="@drawable/axisbank"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Axis Bank"
                                    android:minLines="2"
                                    android:gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@android:color/holo_blue_bright"
                                    android:textSize="18sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/pmnrf"
                                    android:scaleType="centerCrop"
                                    android:layout_width="70dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/pmnrf"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PMNRF"
                                    android:minLines="2"
                                    android:gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@android:color/holo_blue_bright"
                                    android:textSize="18sp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/colorImage1"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:background="@drawable/bgg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BOOK YOUR COVID19 TEST"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@android:color/holo_blue_bright"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="35dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:id="@+id/i1"
                                    android:layout_width="70dp"
                                    android:layout_height="80dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/meddo"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Meddo Health"
                                    android:gravity="center"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@android:color/holo_blue_bright"
                                    android:textSize="20sp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:id="@+id/i2"
                                    android:layout_width="70dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/practo"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Practo"
                                    android:gravity="center"
                                    android:textColor="@android:color/holo_blue_bright"
                                    android:textSize="20sp"
                                    android:minLines="2"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginStart="10dp"
                                    android:id="@+id/i3"
                                    android:layout_width="70dp"
                                    android:layout_height="80dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/lalpathlab"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LalPath Labs"
                                    android:gravity="center"
                                    android:textColor="@android:color/holo_blue_bright"
                                    android:textSize="20sp"
                                    android:minLines="2"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <ImageView
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:id="@+id/i4"
                                    android:layout_width="70dp"
                                    android:layout_height="80dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/thyrocare"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Thyro Care"
                                    android:gravity="center"
                                    android:textColor="@android:color/holo_blue_bright"
                                    android:textSize="20sp"
                                    android:minLines="2"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bgg"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:background="@drawable/bgg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CHECK FOR SYMPTOMS"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_blue_bright"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="35dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/i5"
                                android:layout_width="70dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/apple"/>
                            <ImageView
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/i6"
                                android:layout_width="70dp"
                                android:layout_height="80dp"
                                android:src="@drawable/inter"/>
                            <ImageView
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/i7"
                                android:layout_width="70dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/cdc"/>
                            <ImageView
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:id="@+id/i8"
                                android:layout_width="70dp"
                                android:layout_height="80dp"
                                android:src="@drawable/jio"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>